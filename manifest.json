{
    "name": "Jira Issues In Github",
    "version": "1.0", 
    "manifest_version": 2,
    "description": "Turn Jira issue numbers (like XX-123) in GitHub into links.",
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
            	"jquery.min.js",
                "jira-issues-in-github.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "https://github.com/*"
    ]
}